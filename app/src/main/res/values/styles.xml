<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- 定义宋体字体样式 -->
    <style name="AppFontStyle">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 将所有文本设置为宋体 -->
        <item name="android:textViewStyle">@style/AppFontStyle</item>
        <item name="android:editTextStyle">@style/AppFontStyle</item>
    </style>

    <!--跳过按钮-->
    <style name="SkipButtonStyle" parent="AppFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--注册按钮-->
    <style name="RegisterButtonStyle" parent="AppFontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corners</item>  <!-- 使用圆角背景 -->
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>